 *
 * The following cameras are currently supported:
 *    "xxxxx" T.B.D.
 */

#include <dt-bindings/gpio/gpio.h>

/* T.B.D. */
#define FALCON_CAMERA0  "renesas_camera"
#define FALCON_CAMERA1  "renesas_camera"
